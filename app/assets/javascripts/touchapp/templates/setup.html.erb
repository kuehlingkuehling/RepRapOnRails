<h3 class="wizard-title">Wizards</h3>
<div class="clearfix"><br/></div>

<div class="row">
  <div class="col-md-4">
    <a href="#/wizard_leveling" class="btn btn-primary btn-lg btn-block {{ !idle && 'disabled' }}">
      Print Bed Leveling
    </a>    
    <a href="#/wizard_unload_filament" class="btn btn-primary btn-lg btn-block {{ !(idle || paused) && 'disabled' }}">
      Unload Filament
    </a>
    <a href="#/wizard_load_filament" class="btn btn-primary btn-lg btn-block {{ !(idle || paused) && 'disabled' }}">
      Load Filament
    </a>
    <a href="#/wizard_priming" class="btn btn-primary btn-lg btn-block {{ !(idle || paused) && 'disabled' }}">
      Prime Extruders
    </a>
  </div>
  <div class="col-md-4">
